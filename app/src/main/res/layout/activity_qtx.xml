<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".activity.QtxActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item3_qtx"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />
    <TextView
        android:id="@+id/tv_dz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="60dp"
        android:text="地震预警"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_dz_qg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dz"
        app:layout_constraintStart_toStartOf="@id/tv_dz"
        android:text="强光"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_dz_zd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/cb_dz_qg"
        app:layout_constraintStart_toEndOf="@id/cb_dz_qg"
        android:text="振动"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_notice"
        app:layout_constraintTop_toBottomOf="@id/tv_dz"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="60dp"/>
    <TextView
        android:id="@+id/tv_ld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_dz"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        android:text="来电提醒"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_ld_qg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ld"
        app:layout_constraintStart_toStartOf="@id/tv_ld"
        android:text="强光"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_ld_zd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/cb_ld_qg"
        app:layout_constraintStart_toEndOf="@id/cb_ld_qg"
        android:text="振动"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_notice"
        app:layout_constraintTop_toBottomOf="@id/tv_ld"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="60dp"/>
    <TextView
        android:id="@+id/tv_wx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_ld"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        android:text="微信提醒"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_wx_qg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_wx"
        app:layout_constraintStart_toStartOf="@id/tv_wx"
        android:text="强光"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_wx_zd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/cb_wx_qg"
        app:layout_constraintStart_toEndOf="@id/cb_wx_qg"
        android:text="振动"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_notice"
        app:layout_constraintTop_toBottomOf="@id/tv_wx"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="60dp"/>
    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_wx"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        android:text="QQ提醒"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_qq_qg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_qq"
        app:layout_constraintStart_toStartOf="@id/tv_qq"
        android:text="强光"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_qq_zd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/cb_qq_qg"
        app:layout_constraintStart_toEndOf="@id/cb_qq_qg"
        android:text="振动"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_notice"
        app:layout_constraintTop_toBottomOf="@id/tv_qq"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="60dp"/>
    <TextView
        android:id="@+id/tv_dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_qq"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        android:text="钉钉提醒"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_dd_qg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dd"
        app:layout_constraintStart_toStartOf="@id/tv_dd"
        android:text="强光"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cb_dd_zd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@id/cb_dd_qg"
        app:layout_constraintStart_toEndOf="@id/cb_dd_qg"
        android:text="振动"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_notice"
        app:layout_constraintTop_toBottomOf="@id/tv_dd"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="60dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/btnbg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>